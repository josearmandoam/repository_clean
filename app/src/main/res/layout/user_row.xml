<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/user_list_cardview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    cardview:cardCornerRadius="2dp"
    cardview:cardElevation="3dp"
    cardview:cardUseCompatPadding="true"
    >
    <RelativeLayout
        android:id="@+id/user_list_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/user_list_thumbnail"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_perm_identity_black_24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/user_list_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/user_list_thumbnail"
        android:text="@string/loading"
        android:textSize="20sp"
        android:textColor="@color/dark_blue"
        android:layout_marginLeft="@dimen/user_list_margin_left"
        android:layout_marginTop="@dimen/default_margin_top"
        android:layout_marginRight="30dp" />
    <TextView
        android:id="@+id/user_list_defaultLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/default_lavel"
        android:textSize="20sp"
        android:textColor="@color/dark_blue"
        android:layout_marginLeft="-20dp"
        android:layout_toRightOf="@id/user_list_username"
        android:layout_marginTop="@dimen/default_margin_top"
        />
    <TextView
        android:id="@+id/user_list_email"
        android:layout_marginTop="@dimen/user_list_margin_top"
        android:layout_below="@+id/user_list_username"
        android:layout_toRightOf="@+id/user_list_thumbnail"
        android:text="@string/loading"
        android:textSize="15sp"
        android:textColor="@color/orange"
        android:layout_marginLeft="@dimen/user_list_margin_left"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    </RelativeLayout>
</android.support.v7.widget.CardView>
